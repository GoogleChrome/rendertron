{
  "name": "bot-render",
  "version": "1.0.0",
  "description": "Renders webpages using headless Chrome for usage by bots",
  "engines": {
    "node": ">=7"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "lint": "eslint src/*.js test/*.js",
    "monitor": "nodemon src/main.js",
    "monitor-inspect": "nodemon --inspect src/main.js",
    "test": "ava test/app-test.js"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "chrome-launcher": "^0.3.1",
    "chrome-remote-interface": "^0.24.1",
    "express": "^4.15.2",
    "nock": "^9.0.13"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.8.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "node": true
    },
    "rules": {
      "new-cap": 0,
      "max-len": 0,
      "no-warning-comments": 0,
      "curly": 0,
      "comma-dangle": 0,
      "eqeqeq": 0,
      "no-eq-null": 0,
      "require-jsdoc": 0
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  }
}
