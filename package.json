{
  "name": "rendertron",
  "version": "1.1.1",
  "description": "Renders webpages using headless Chrome for usage by bots",
  "license": "Apache-2.0",
  "repository": "https://github.com/GoogleChrome/rendertron",
  "engines": {
    "node": ">=7"
  },
  "main": "src/main.js",
  "bin": "bin/rendertron",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node build/main.js",
    "format": "find src -name '*.ts' | xargs clang-format --style=file -i",
    "lint": "eslint src/*.js test/*.js",
    "monitor": "nodemon src/main.js",
    "monitor-inspect": "nodemon --inspect src/main.js",
    "test": "(cd test-resources && npm install) && npm run build && ava build/test --timeout 5s",
    "start-emulator": "(gcloud beta emulators datastore start --project emulator-project &) 2>&1 | grep -m1 'now running'",
    "test-cache": "npm run start-emulator && $(gcloud beta emulators datastore env-init) && export GCLOUD_PROJECT='emulator-project' && ava test/cache-test.js"
  },
  "dependencies": {
    "@google-cloud/datastore": "^1.3.3",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.0",
    "@webcomponents/webcomponentsjs": "^1.1.0",
    "chrome-launcher": "^0.10.2",
    "chrome-remote-interface": "^0.26.0",
    "compression": "^1.7.0",
    "express": "^4.15.2",
    "performance-now": "^2.1.0",
    "progress-bar-element": "^2.0.1",
    "puppeteer": "^1.5.0",
    "semver": "^5.5.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/puppeteer": "^1.5.0",
    "@types/supertest": "^2.0.4",
    "ava": "1.0.0-beta.6",
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.8.0",
    "nodemon": "^1.18.3",
    "supertest": "^3.0.0",
    "typescript": "^2.9.2"
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "node": true
    },
    "rules": {
      "new-cap": 0,
      "max-len": 0,
      "no-warning-comments": 0,
      "curly": 0,
      "comma-dangle": 0,
      "eqeqeq": 0,
      "no-eq-null": 0,
      "require-jsdoc": 0
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  }
}
