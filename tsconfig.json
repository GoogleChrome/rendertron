{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "rootDir": "./src",
    "outDir": "./build",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
